<body onLoad="alternate('thetable')">
<center>
<br/>
<div style="color:Darkgreen;text-align:center;font-size:150%">Books Available</div>
<div style="color:red;text-align:center;font-size:100%"><%=flash[:notice]%></div>
<table id="thetable" border="0" >
	<tr>
		<th class="heading" nowrap>Book Name</th>
		<th class="heading" nowrap>Author </th>
		<th class="heading" nowrap>Edition</th>
		<th class="heading" nowrap>Status</th>
		<th class="heading" nowrap>Total</th>
		<th class="heading" nowrap>Serial no</th>
		<th class="heading" nowrap>Operation</th>
	</tr>

<% @books.each do |book| %>
	<tr>
		<td class="data" nowrap><%=book.name%></td>
		<td class="data" nowrap><%=book.author%></td>
		<td class="data" nowrap><%=book.edition%></td>
		<td class="data" nowrap><%=book.status%></td>
		<td class="data" nowrap><%=book.total%></td>
		<td class="data" nowrap><%=book.sl_no%></td>
		<td class="data" nowrap><%= link_to (image_tag("delete_icon.jpg",:width=>'20px',:height=>'20px', :alt => 'delete')),
						 {:controller => "Books", :action => "delete",:id => book.id},
						{:onclick => "return confirm('Are you sure you want to delete this?');"} %>&nbsp;&nbsp;&nbsp;
					<%= link_to (image_tag("edit_icon.jpg",:width=>'20px',:height=>'20px', :alt => 'edit')), {:controller => "Books", :action => "editbook",:id => book.id},
						{:onclick => "return confirm('Are you sure you want to edit this?');"} %>
					</td>	

	</tr>
<%end%>

</table>
<br/>

<div style="text-align:center"><%= link_to "Back",{:controller=>"Books", :action=>"index"},{:style=>'text-decoration:none'}%></div>
</center>
</body>
